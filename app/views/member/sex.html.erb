
<table>
<tr>
  <td>会員ID</td>
  <td>氏名</td>
  <td>性別</td>
  <td>年齢</td>
  <td>成人</td>
  <td>詳細</td>
</tr>

<% @members.each do |member| %>

<tr>
<td><%="#{member[:id]}" %></td>
<td><%= "#{member[:name]}" %></td>
<% if member[:sex] == 0 %>
  <td>男性</td>
<% else %>
  <td>女性</td>
<% end %>
<td><%= "#{member[:age]}" %></td>
  <% if member[:age] >= 20 %>
    <td><%= "◯"%></td>
  <% else %>
    <td><%= " "%> </td>
  <% end %>


<td><%= link_to("詳細","/member/show/#{member[:id]}") %></td>
</tr>

<% end %>

</table>
